
.contents

  .side
    .header-side
      = current_user.name
      .header-menu
        =link_to new_group_path do
          %i.fas.fa-edit
        =link_to edit_user_registration_path do
          %i.fa.fa-cog

    = render 'shared/side_bar'

  .main
    .header-main
      .header-main__group
        = @group.name
      .header-main__users
        Member:
        - @group.users.each do |user|
          = user.name + " "
      =link_to 'edit' do
        .header-main__edit
          Edit

    .messages
      %ul
        = render @messages

      .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__text', placeholder: 'type a message'
        .label-box
          = f.label :image, class: 'form__img' do
            = fa_icon 'picture-o'
            = f.file_field :image, class: 'form__img--alert'
        = f.submit 'Send', class: 'form__button'



